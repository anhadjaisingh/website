---
import BaseLayout from "../layouts/BaseLayout.astro";

const links = [
  { name: "GitHub", url: "https://github.com/ffledgling" },
  { name: "LinkedIn", url: "https://linkedin.com/in/anhadjaisingh" },
  { name: "X / Twitter", url: "https://x.com/ffledgling" },
];
---

<BaseLayout title="Home">
  <!-- Bio -->
  <section class="mb-12">
    <h1 class="font-serif text-4xl font-bold mb-2">Anhad Jai Singh</h1>
    <p class="text-stone-500 dark:text-stone-400 mb-6">
      Software developer. Curious about everything.
    </p>
    <div class="prose prose-stone prose-lg dark:prose-invert max-w-none">
      <p>
        Welcome to my corner of the internet. I write about software, and
        occasionally about the many other things that catch my attention â€”
        finance, golf, mechanical keyboards, watches, art, and whatever else I'm
        exploring.
      </p>
    </div>
  </section>

  <!-- Find Me -->
  <section class="mb-12">
    <h2 class="font-serif text-2xl font-bold mb-4">Find Me</h2>
    <p class="text-stone-600 dark:text-stone-400">
      {
        links.map((link, i) => (
          <>
            <a
              href={link.url}
              class="text-accent hover:underline"
              target="_blank"
              rel="noopener noreferrer"
            >
              {link.name}
            </a>
            {i < links.length - 1 ? <span class="mx-1">&middot;</span> : null}
          </>
        ))
      }
    </p>
  </section>
</BaseLayout>
