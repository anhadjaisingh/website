---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import { formatDate } from "../lib/utils";
import { socialLinks, GITHUB_URL } from "../lib/social-links";
import { fetchTopRepos } from "../lib/github-projects";

const posts = (await getCollection("blog"))
  .filter((post) => import.meta.env.DEV || !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

const annotations = (await getCollection("annotations")).filter(
  (a) => import.meta.env.DEV || !a.data.draft,
);

const topRepos = await fetchTopRepos(3);
---

<BaseLayout title="Home">
  <!-- Hero Section -->
  <section
    class="pb-12 mb-16 border-b border-stone-200 dark:border-stone-700 pt-8"
  >
    <h1
      class="text-5xl md:text-6xl text-stone-900 dark:text-stone-100"
      style="font-family: 'EB Garamond', serif; font-weight: 600;"
    >
      Anhad
    </h1>
    <p class="text-stone-500 dark:text-stone-400 mt-2 text-lg">
      a.k.a. ffledgling
    </p>
    <div class="prose prose-stone prose-lg dark:prose-invert max-w-none mt-6">
      <p>
        Hi, my name is <span class="font-serif font-extrabold">Anhad</span>, and
        sometimes I go by <span class="font-serif font-extrabold"
          >ffledgling</span
        > online. Welcome to my corner of the internet. I write about software, and
        occasionally about the many other things that catch my attention â€” finance,
        golf, mechanical keyboards, watches, art, and whatever else I'm exploring.
      </p>
    </div>
    <div class="flex flex-wrap gap-4 mt-8">
      <a
        href="/blog"
        class="inline-block px-6 py-2.5 bg-accent text-white font-medium rounded-lg hover:bg-accent-hover transition-colors"
      >
        Read Blog
      </a>
      <a
        href="/projects"
        class="inline-block px-6 py-2.5 border border-stone-300 dark:border-stone-600 text-stone-700 dark:text-stone-300 font-medium rounded-lg hover:border-accent hover:text-accent dark:hover:border-accent dark:hover:text-accent transition-colors"
      >
        View Projects
      </a>
    </div>

    <!-- Social links -->
    <div class="flex flex-wrap gap-x-6 gap-y-3 mt-8 text-sm">
      {
        socialLinks.map((link) => (
          <a
            href={link.url}
            class="inline-flex items-center gap-1.5 text-stone-600 dark:text-stone-400 hover:text-accent transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg
              class="w-4 h-4"
              viewBox="0 0 24 24"
              fill="currentColor"
              set:html={link.icon}
            />
            {link.name}
          </a>
        ))
      }
    </div>
  </section>

  <!-- Content Grid -->
  <section>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Latest Posts -->
      <div>
        <h2
          class="font-serif text-xl border-b border-stone-200 dark:border-stone-700 pb-2 mb-4"
        >
          Latest Posts
        </h2>
        <ul class="space-y-4">
          {
            posts.map((post) => (
              <li>
                <a href={`/blog/${post.id}`} class="group block">
                  <time
                    datetime={post.data.date.toISOString()}
                    class="text-xs text-stone-500 dark:text-stone-400"
                  >
                    {formatDate(post.data.date)}
                  </time>
                  <p class="text-sm font-medium group-hover:text-accent transition-colors">
                    {post.data.title}
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Projects -->
      <div>
        <h2
          class="font-serif text-xl border-b border-stone-200 dark:border-stone-700 pb-2 mb-4"
        >
          Projects
        </h2>
        <ul class="space-y-4">
          {
            topRepos.map((repo) => (
              <li>
                <a
                  href={repo.html_url}
                  class="group block"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <p class="text-sm font-medium group-hover:text-accent transition-colors">
                    {repo.name}
                    {repo.language && (
                      <span class="ml-1 text-xs font-normal text-stone-400">
                        {repo.language}
                      </span>
                    )}
                  </p>
                  {repo.description && (
                    <p class="text-xs text-stone-500 dark:text-stone-400 mt-0.5">
                      {repo.description}
                    </p>
                  )}
                </a>
              </li>
            ))
          }
        </ul>
        <a
          href={GITHUB_URL}
          class="inline-block mt-4 text-xs text-accent hover:text-accent-hover transition-colors"
          target="_blank"
          rel="noopener noreferrer"
        >
          View all on GitHub &rarr;
        </a>
      </div>

      <!-- Readings -->
      <div>
        <h2
          class="font-serif text-xl border-b border-stone-200 dark:border-stone-700 pb-2 mb-4"
        >
          Readings
        </h2>
        {
          annotations.length > 0 && (
            <div>
              <a
                href={`/annotations/${annotations[0].id.replace(/\/source$/, "")}`}
                class="group block"
              >
                <h3 class="text-sm font-medium group-hover:text-accent transition-colors">
                  {annotations[0].data.title}
                </h3>
                <p class="text-xs text-stone-500 dark:text-stone-400 mt-1">
                  by {annotations[0].data.author}
                </p>
                <p class="text-xs text-stone-500 dark:text-stone-400 mt-1">
                  {annotations[0].data.description}
                </p>
              </a>
            </div>
          )
        }
      </div>
    </div>
  </section>
</BaseLayout>
