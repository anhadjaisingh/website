<BaseLayout title="Home">
  <!-- Bio -->
  <section class="mb-12">
    <div class="prose prose-stone prose-lg dark:prose-invert max-w-none">
      <p>
        Hi, my name is <span class="font-serif font-bold">Anhad Jai Singh</span
        >, and sometimes I go by <span class="font-serif font-bold"
          >ffledgling</span
        > online. Welcome to my corner of the internet. I write about software, and
        occasionally about the many other things that catch my attention â€” finance,
        golf, mechanical keyboards, watches, art, and whatever else I'm exploring.
      </p>
    </div>
  </section>

  <!-- Social Links -->
  <section class="mb-12">
    <div class="flex flex-wrap justify-center gap-x-6 gap-y-3">
      {
        links.map((link) => (
          <a
            href={link.url}
            class="inline-flex items-center gap-1.5 text-stone-600 dark:text-stone-400 hover:text-accent transition-colors"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg
              class="w-4 h-4 inline-block"
              viewBox="0 0 24 24"
              fill="currentColor"
              set:html={link.icon}
            />
            {link.name}
          </a>
        ))
      }
    </div>
  </section>
</BaseLayout>
